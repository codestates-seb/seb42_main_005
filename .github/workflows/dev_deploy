name: [DEV] BE Deploy

on:
  pull_request_target:
    branches: [ "dev" ]
    types: [closed, labeled]

jobs:
  if_merged:
    if: github.event.pull_request.merged == true && contains(github.event.pull_request.labels.*.name, 'be deploy')
    
    runs-on: ubuntu-latest
    steps:
      - name: Print Completed Message
        run: |
          echo The PR of Backend was merged!
